<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <io.github.jhcpokemon.topbardemo.view.TopBar
        android:id="@+id/top_bar"
        android:background="@color/tapBarBackgroundColor"
        custom:titleText="Title"
        custom:titleColor="@android:color/white"
        custom:titleSize="8sp"
        custom:leftButtonText="Back"
        custom:leftButtonTextColor="@android:color/white"
        custom:leftButtonBackground="@color/colorPrimary"
        custom:rightButtonText="More"
        custom:rightButtonTextColor="@android:color/white"
        custom:rightButtonBackground="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</RelativeLayout>